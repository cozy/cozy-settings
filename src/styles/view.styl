@require 'cozy-ui'
@require './spinner.styl'

.set-view-content
    padding-left   2rem
    padding-right  2rem
    padding-bottom 2rem

    .set-view-title
    .set-view-subtitle
        padding  0

    .set-view-subtitle
        margin-bottom  0em

    .set-view-content-twofa-modal-wrapper
        .set-view-content-twofa-modal-content
            line-height 1.5
        .set-view-content-twofa-modal-content-button
            margin-bottom .5rem

.set-view-section
    margin-bottom 2.5rem
    .set-view-section-label
        margin-bottom .2rem
        line-height 1.5

    .set-view-section-link
        cursor pointer
        font-weight 700

.set-view-content--narrow
    max-width  32em

.set-view-title
.set-view-subtitle
    padding  0 2rem

    +small-screen()
        .devices-view h2
            padding  0 .8em

.set-view-subtitle
    margin-bottom 0

.set-view-content-twofa
    &-modal
      // ugly hack to overide default Input styles
      &-confirmation-input
        div,
        h3
          margin-top 0 !important
      &-nocode
        color #95999d
      &-content
        &-button
            text-align center
        &-right-buttons
            text-align right
    &-point
        display flex
        padding-bottom 10px
        align-items flex-start
        &-image
          width 80px
          padding-right 10px

.coz-btn--revoke
    padding .2em 0
    background           transparent
    color                dodgerBlue

.set-export-modal
    .set-export-modal-header
        text-align center

    .set-export-modal-spinner
        padding-bottom 2rem
        align-self center

    .set-export-modal-image
        margin-bottom 1rem

    .set-export-modal-description
        flex-grow 1

    .set-export-modal-action
        max-width unset
        width 100%
        margin .5rem 0

    .set-export-modal-action:first-child
        margin-top 1.5rem

    .set-export-modal-footer
        display flex

        button
            flex-grow 1
            flex-basis 50%
