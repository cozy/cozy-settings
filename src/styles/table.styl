@require 'settings/breakpoints'

.coz-table
    margin 0 -2rem

    .set-table-name
        flex 0 0 40%

    .set-table-os
    .set-table-browser
        flex 0 0 30%

    .set-table-activity
    .set-table-permission
    .set-table-actions
    .set-table-ip
        flex 0 0 15%

    .set-table-date
        flex 0 0 15%

    .set-table-devices
        // quick fix for cozy-ui table layout issue
        height auto!important //@stylint ignore

    .set-table-sessions
        // quick fix for cozy-ui table layout issue
        height auto!important //@stylint ignore

    .coz-table-primary
        font-size  1rem

    +small-screen()
        .set-table-name
            flex  0 0 100%
            padding-top .5rem
            padding-bottom .5rem

        .set-table-activity
        .set-table-permission
            display none

.set-table-devices
    .set-table-actions
        flex 0 0 45%

    +small-screen()
        .set-table-date
        .set-table-actions
            display none
